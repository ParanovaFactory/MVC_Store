@model MVC_Store.Models.tblEmployee
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Name</label>
        <input type="text" class="form-control" name="employeeName" id="employeeName" />
    </div>
    <div>
        <label>Surname</label>
        <input type="text" class="form-control" name="employeeSurname" id="employeeSurname" />
    </div>
    <div>
        <label>Department</label>
        <input type="text" class="form-control" name="employeeDepartment" id="employeeDepartment" />
    </div>
    <div style="margin-top:10px">
        <button class="btn btn-success">SAVE</button>
    </div>
</form>